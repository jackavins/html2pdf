<body>
    <div class="book">
        <div class="page">
            <div class="subpage">
                <table class="w-100">
                    <tr>
                        <td colspan="2">From: {{from}}</td>
                    </tr>
                    <tr>
                        <td>{{fromCity}}, {{fromState}} {{fromPin}}</td>
                        <td class="text-right">{{relativeTime date}}</td>
                    </tr>
                    <tr>
                        <td>To: {{to}}</td>
                        <td class="text-right">{{moment date "DD-MMM-YY"}}</td>
                    </tr>
                    <tr>
                        <td colspan="2">{{toCity}}, {{totate}} {{toPin}}</td>
                    </tr>
                    <tr>
                        <td colspan="2" class="uppercase text-center pt-2 border-bottom bold">Sale Order</td>
                    </tr>
                    <tr>
                        <td colspan="2" class="border-black border-bottom-2 border-top-2 p-0">
                            <table class="w-100">
                                <tr>
                                    <td class="border-black border-bottom-2">S.No</td>
                                    <td class="border-black border-bottom-2">Name</td>
                                    <td class="border-black border-bottom-2 text-center">Ordered</td>
                                    <td class="border-black border-bottom-2 text-center">Stock</td>
                                </tr>
                                {{#each aProduct}}
                                <tr>
                                    <td>{{inc @index}}</td>
                                    <td>
                                        <div class="product-name">{{this.name}}</div>
                                        {{#if this.remark}}
                                        <div class="product-remark">{{this.remark}}</div>
                                        {{/if}}
                                    </td>
                                    <td class="text-center {{deriveCSSByQuantity this.ordered this.stock}}">
                                        {{this.ordered}}</td>
                                    <td class="text-center {{deriveCSSByQuantity this.ordered this.stock}}">
                                        {{this.stock}}</td>
                                </tr>
                                {{/each}}
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="pt-3"> Other Added Products(If any): </td>
                    </tr>
                    <tr>
                        <td colspan="2"> 1 </td>
                    </tr>
                    <tr>
                        <td colspan="2"> 2 </td>
                    </tr>
                    <tr>
                        <td colspan="2"> 3 </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="pt-4"> Instructions, If any: </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="pt-4"> Transport : Preferred Transport Name </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="pt-4"> Goods referred as: Preferred Name </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="pt-4"> Total Cases: </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="pt-4"> Charges (if any): </td>
                    </tr>
                </table>
            </div>
        </div>
